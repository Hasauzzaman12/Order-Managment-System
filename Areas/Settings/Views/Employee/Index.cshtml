@model IEnumerable<OMS.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Sl = 1;
}

<h3>Employee List</h3>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus" aria-hidden="true"></i> Create</a>
</p>

<table class="table table-bordered table-striped table-hover table-sm">
    <thead>
        <tr style="text-align:center">
            <th>
                SL. No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpIdCardNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                Company
            </th>
            <th>
                Designation
            </th>
            <th>
                Department
            </th>
            <th>
                Mobile
            </th>
            <th>
                Status
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:center">
                @(Sl++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpIdCardNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoiningDate)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation.DesignationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
                <partial name="_PartialButtons" model="@item.EmployeeId" />

        </tr>
}
    </tbody>
</table>
