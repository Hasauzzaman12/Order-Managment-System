@model IEnumerable<OMS.Areas.Settings.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int Sl = 1;
}

<h3>User List</h3>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus" aria-hidden="true"></i> Create</a>
</p>

<table class="table table-bordered table-striped table-hover table-sm">
    <thead>
        <tr style="text-align:center">
            <th>
            </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Role Name</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @(Sl++)
                </td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.RoleName</td>

            </tr>
        }
    </tbody>

</table>