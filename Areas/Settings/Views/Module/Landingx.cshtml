@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Module Landing</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .hover-effect {
            /* padding: 50px;*/
            /* background-color: gr;*/
            transition: transform .2s;
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }

            .hover-effect:hover {
                -ms-transform: scale(1.2); /* IE 9 */
                -webkit-transform: scale(1.2); /* Safari 3-8 */
                transform: scale(1.2);
            }

        .logoutright {
            text-align: right;
            padding-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="logoutright">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Landing", "Module", new { area = "Settings" })">
                <button type="submit" style="color:darkblue; border:none; background:none"><i class="fa fa-sign-out" title="Logout" aria-hidden="true"></i></button>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="p-4 rounded mt-4">
            <div class="row">
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class="h-100">
                        <a href="#"><img src="~/images/button-hr.png" /></a>
                        <a href="#"><p class="text-center fw-bold text-primary">HR & Payroll</p></a>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-trims.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Trim Sales</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-cost.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Costing</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-acc.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Accounting</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-plan.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Planning</p>
                    </div>
                </div>
            </div>

            <div class="row pt-5">
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-pro.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Supply Chain</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-sec.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">SYS Admin</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-sew.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Production</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-exim.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Export Import</p>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                    <div class=" h-100">
                        <img src="~/images/button-repo.png" width="161px" ; height="161px" />
                        <p class="text-center fw-bold text-primary">Reports</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
