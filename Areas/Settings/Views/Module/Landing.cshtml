@model IEnumerable<OMS.Models.Module>

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Module Landing</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .hover-effect {
            transition: transform .2s;
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }

        .hover-effect:hover {
            -ms-transform: scale(1.2); /* IE 9 */
            -webkit-transform: scale(1.2); /* Safari 3-8 */
            transform: scale(1.2);
        }
        .logoutright{
            text-align:right;
            padding-top:10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="logoutright">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Landing", "Module", new { area = "Settings" })">
                <button type="submit" style="color:darkblue; border:none; background:none"><i class="fa fa-sign-out" title="Logout" aria-hidden="true" style="font-size:18px;"></i></button>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="p-4 rounded mt-4">
            <div class="row">
                 @foreach (var module in Model)
                {
                    <div class="col-md-2 col-sm-6 col-xs-12 hover-effect">
                        <div class="h-100">
                            <a asp-area="@module.AreaName" asp-action="@module.ViewName" asp-controller="@module.ControllerName"><img src="~/@module.ImagePath" alt="Card Image" width="161px"; height="161px" /></a>
                            <a asp-area="@module.AreaName" asp-action="@module.ViewName" asp-controller="@module.ControllerName"><p class="text-center fw-bold text-primary">@module.ModuleName</p></a>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
